# OCR模型服务配置文件
# 此文件包含所有模型的服务地址和参数配置

# ============================================
# 模型服务地址配置
# ============================================

# Qwen2-VL模型服务
QWEN_SERVER_URL=http://localhost:8000/v1/chat/completions
QWEN_MODEL_NAME=Qwen2-VL-7B-Instruct

# DeepSeek-VL模型服务
DEEPSEEK_SERVER_URL=http://localhost:8001/v1/chat/completions
DEEPSEEK_MODEL_NAME=DeepSeek-VL2

# Hunyuan-VL模型服务
HUNYUAN_SERVER_URL=http://localhost:8002/v1/chat/completions
HUNYUAN_MODEL_NAME=Hunyuan-VL

# MinerU模型服务
MINERU_SERVER_URL=http://localhost:8003/v1/chat/completions
MINERU_MODEL_NAME=MinerU

# ============================================
# 通用参数配置
# ============================================

# HTTP请求超时(秒)
HTTP_TIMEOUT=600

# 最大重试次数
MAX_RETRIES=3

# 重试退避因子
RETRY_BACKOFF_FACTOR=0.5

# 最大并发数
MAX_CONCURRENCY=100

# 批处理大小
BATCH_SIZE=0

# ============================================
# 图像处理参数
# ============================================

# 布局检测图像尺寸(宽,高)
LAYOUT_IMAGE_SIZE=1036,1036

# 最小图像边长
MIN_IMAGE_EDGE=28

# 最大图像边长比例
MAX_IMAGE_EDGE_RATIO=50.0

# PDF转图像缩放比例
PDF_SCALE_FACTOR=2.0

# ============================================
# 后处理参数
# ============================================

# 是否处理公式块
HANDLE_EQUATION_BLOCK=true

# 是否抛弃列表
ABANDON_LIST=false

# 是否抛弃段落文本
ABANDON_PARATEXT=false

# 调试模式
DEBUG=false

# ============================================
# Streamlit应用配置
# ============================================

# Streamlit服务端口
STREAMLIT_PORT=8501

# 最大上传文件大小(MB)
MAX_UPLOAD_SIZE=200

# ============================================
# 输出文件配置
# ============================================

# 输出目录(默认为 output_dir)
OUTPUT_DIR=output_dir

# 是否生成Markdown输出
GENERATE_MD=true

# 是否生成model.json
GENERATE_MODEL_JSON=true

# 是否生成middle.json
GENERATE_MIDDLE_JSON=true

# 是否生成content_list.json
GENERATE_CONTENT_LIST_JSON=true

# 是否保存图像
SAVE_IMAGES=true

# 是否生成layout.pdf
GENERATE_LAYOUT_PDF=true

# 是否生成spans.pdf
GENERATE_SPANS_PDF=false

# ============================================
# 日志配置
# ============================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/ocr_app.log

# 是否在控制台显示日志
LOG_TO_CONSOLE=true
